  uaa.sslPrivateKey:
    description: "The server's ssl private key. Only passphrase-less keys are supported"
    default: ''
    example: |
      -----BEGIN RSA PRIVATE KEY-----
      MIICXwIBAAKBgQD1TiBrxvDBW5KovsrXQR1WxBnXuI2gqYZrxpvPf+CrNK/tONVb
